<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".OptionFragment">



    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:backgroundTint="#000000"
        android:fontFamily="@font/eightbit"
        android:text="out"
        android:textColor="#FFFFFF"
        android:textSize="8sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnHome"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="132dp"
        android:background="@drawable/circle_btn"
        android:backgroundTint="@null"
        android:fontFamily="@font/eightbit"
        android:text="Home"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnAnniversary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnChat"
        app:layout_constraintTop_toBottomOf="@+id/btnMemory" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnChat"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="144dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="132dp"
        android:background="@drawable/circle_btn"
        android:backgroundTint="@null"
        android:fontFamily="@font/eightbit"
        android:text="Chat"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnAnniversary"
        app:layout_constraintEnd_toStartOf="@+id/btnHome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnMemory" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAnniversary"
        android:layout_width="300dp"
        android:layout_height="140dp"
        android:layout_marginBottom="100dp"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:backgroundTint="@null"
        android:fontFamily="@font/eightbit"
        android:text="In Love"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnMemory"
        android:layout_width="300dp"
        android:layout_height="140dp"
        android:layout_marginTop="-300dp"
        android:background="#FFFFFF"
        android:textColor="#000000"
        android:backgroundTint="@null"
        android:fontFamily="@font/eightbit"
        android:text="Memory"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnAnniversary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>